    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "node-html-parser": "^7.0.0",
    "postcss": "^8.4.49",
    "pwa-asset-generator": "^8.1.2",
    "tailwindcss": "^3.4.14",
    "toml": "^3.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^2.1.5"
  }
