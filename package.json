{
  "name": "system-8-interactive-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:assets": "node scripts/build-fonts.mjs",
    "build:og": "node scripts/generate-social-preview.mjs",
